{
  "name": "simplegitdiff",
  "displayName": "SimpleGitDiff",
  "description": "",
  "version": "0.0.8",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "simplegitdiff.makeSimpleGitDiff",
        "title": "SimpleGitDiff"
      },
      {
        "command": "simplegitdiff.clearSimpleGitDiff",
        "title": "SimpleGitDiffClear"
      },
      {
        "command": "simplegitdiff.upSimpleGitDiff",
        "title": "SimpleGitDiffUp"
      },
      {
        "command": "simplegitdiff.downSimpleGitDiff",
        "title": "SimpleGitDiffDown"
      }
    ],
    "configuration": {
      "properties": {
        "conf.resource.backgroundColor": {
          "type": "string",
          "default": "#00FF0040",
          "description": "背景色",
          "pattern": "#[0-9a-fA-F]{8}",
          "maxLength": 9
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "simplegitdiff.upSimpleGitDiff",
          "group": "myGroup@1"
        },
        {
          "when": "editorFocus",
          "command": "simplegitdiff.downSimpleGitDiff",
          "group": "myGroup@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "simple-git": "^3.27.0"
  }
}
